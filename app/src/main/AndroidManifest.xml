<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tndata.officehours">

    <application
        xmlns:tools="http://schemas.android.com/tools"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".OfficeHoursApp"
        tools:replace="android:allowBackup" >

        <activity
            android:name=".activity.LauncherActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.OnBoardingActivity"
            android:label="@string/on_boarding_label" />

        <activity
            android:name=".activity.ScheduleActivity"
            android:label="My Schedule" />

        <activity
            android:name=".activity.AddCodeActivity"
            android:label="Add Code"
            android:theme="@style/DialogActivityTheme"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name=".activity.AddCourseActivity"
            android:label="@string/add_course_label" />

        <activity android:name=".activity.CourseEditorActivity" />

        <activity android:name=".activity.CourseActivity" />

        <activity android:name=".activity.ChatActivity" />

        <activity
            android:name=".activity.TimeSlotPickerActivity"
            android:label="@string/time_slot_picker_label"
            android:theme="@style/DialogActivityTheme" />

    </application>
</manifest>
