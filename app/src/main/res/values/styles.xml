<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>

        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FlatButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/flat_button_margin</item>
        <item name="android:paddingLeft">@dimen/flat_button_padding</item>
        <item name="android:paddingRight">@dimen/flat_button_padding</item>
        <item name="android:minWidth">@dimen/flat_button_min_width</item>
        <item name="android:minHeight">@dimen/flat_button_min_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/flat_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/flat_button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:radius">@dimen/flat_button_corner_radius</item>
    </style>

</resources>
